<link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css">
<div class="p-4" style="height: 80px;">
    <h2>DANH SÁCH SẢN PHẨM</h2>
    <div class="rounded-circle"
         style="width: 55px; height: 55px;  position: absolute; top: 12px;right: 30px; background-color:red; padding: 14px;">
        <a href="/product/add-product" class="menu-btn">
            <img src="../../image/add.svg" width="100%" height="100%">
        </a>
    </div>

</div>
<div class="row pl-5 pr-5 pb-5">
    <table class="text-center">
        <thead>
        <tr style="height:54px">
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Giá bán</th>
            <th>Giá Nhập</th>
            <th>Số lượng</th>
            <th>Thương hiệu</th>
            <th>Thao tác</th>
        </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <th>{{this.name}}</th>
                <th>
                    <img src="https://ae-shop.herokuapp.com/{{this.src.[0]}}" width="80" height="80">
                </th>
                <td>{{this.export_price}} $</td>
                <td>{{this.impot_price}} $</td>
                <td>Số lượng</td>
                <td>{{this.brand_name}}</td>
                <td>
                    <ul style="margin-bottom: 0px; padding-left: 0px;">
                        <li>
                            <a href="/product/edit-product/{{this.id_product}}"
                               style="color: #30DD21; margin-right: 15px; font-size:20px; text-decoration: none;">
                                <i class="fas fa-edit"></i>
                                Sửa
                            </a>
                        </li>
                        <li>
                            <a href="#" style="color: #FF0000; font-size:20px; text-decoration: none;">
                                <i class="far fa-trash-alt"></i>
                                Xóa
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>


<style>
    table,
    td,
    th {
        border: 1px solid black;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    td,
    {
        vertical-align: bottom;
    }

    li {
        display: inline;
    }
</style>
