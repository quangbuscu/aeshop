<link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css">
<div class="p-4" style="height: 80px;">
    <h2>DANH SÁCH SẢN PHẨM</h2>
    <div class="rounded-circle"
         style="width: 55px; height: 55px;  position: absolute; top: 12px;right: 30px; background-color:red; padding: 14px;">
        <a href="/product/add-product" class="menu-btn">
            <img src="../../image/add.svg" width="100%" height="100%">
        </a>
    </div>

</div>
<div class="row pl-5 pr-5 pb-5">
    <table class="text-center">
        <thead>
        <tr style="height:54px">
            <th>Tên sản phẩm</th>
            <th>Hình ảnh</th>
            <th>Giá bán</th>
            <th>Giá Nhập</th>
            <th>Số lượng</th>
            <th>Thương hiệu</th>
            <th>Thao tác</th>
        </tr>
        </thead>
        <tbody>
        {{#each data}}
            <tr>
                <th>{{this.name}}</th>
                <th>
                    <img src="https://ae-shop.herokuapp.com/{{this.src.[0]}}" width="80" height="80">
                </th>
                <td>{{this.export_price}} $</td>
                <td>{{this.impot_price}} $</td>
                <td>Số lượng</td>
                <td>{{this.brand_name}}</td>
                <td style="margin: auto">
                    <ul style="margin-bottom: 0px; padding-left: 0px;">
                        <li>
                            <a href="/product/edit-product/{{this.id_product}}" class="btn"
                               style="color: #30DD21; margin-right: 15px; font-size:20px; text-decoration: none;">
                                <i class="fas fa-edit"></i>
                                Sửa
                            </a>
                        </li>
                        <li>
                            <button type="button" class="btn" data-toggle="modal" data-target="#exampleModalCenter"
                                    style="background-color: white; color: #FF0000; font-size:20px; border-color: white">
                                <i class="far fa-trash-alt"></i>
                                Xóa
                            </button>
                        </li>
                    </ul>
                </td>
            </tr>
            <form id="myForm" method="post" action="/product/delete-product/{{this.id_product}}" style="display: none;"></form>
        {{/each}}
        </tbody>
    </table>
    <div style="margin: 0 auto">
        <nav aria-label="Page navigation example" style="margin-top: 50px">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="1">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-notify modal-info" role="document">
            <div class="modal-content text-center">
                <div class="modal-body">
                    <img class="animated rotateIn mb-4" src="../../image/notifycation.png" width="150" height="150"/>
                    <p>Bạn có muốn xóa mục này ?</p>
                </div>
                <div class="mb-3 flex-center">
                    <a style="width: 30%; background-color: #C5C5C5; color: black" type="button"
                       class="btn waves-effect" data-dismiss="modal">Không</a>
                    <a style="width: 30%;  background-color: #F91A07; color: white" href="" class="btn" onclick="event.preventDefault();
                    document.getElementById('myForm').submit();">Có</a>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- Modal -->


<style>
    table,
    td,
    th {
        border: 1px solid black;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    li {
        display: inline;
    }
</style>
